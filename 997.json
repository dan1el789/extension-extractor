{
  "manifest_version": 2,
  "name": "YouTube™ for TV",
  "short_name": "youtube-for-tv",
  "description": "Allows https://youtube.com/tv to load YouTube™ TV App from regular browser", 
  "version": "0.0.3",
  
  "icons": {
    "16": "icons/16.png",
    "18": "icons/18.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "36": "icons/36.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
	"512": "icons/512.png"
  },

  "permissions": [
    "*://*.youtube.com/tv*",
	"webRequest",
	"webRequestBlocking",
	"tabs",
	"contextMenus",
    "storage",
	"webNavigation"
  ],
  
  "background": {
    "scripts": ["background.js"]
  }  
}

