{
  "version": "0.1.9",
  "manifest_version": 2,
  "short_name": "ighangouts",
  "name": "Messenger for Google™ Hangouts",
  "background": {"page": "lib/chrome/background.html"},
  "homepage_url": "http://add0n.com/google-hangouts.html",
  "description": "Connect with friends and family while you browse internet",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "browser_action": {
    "default_icon": "data/icon16.png",
    "default_title": "Messenger for Google™ Hangouts"
  },
  "content_scripts": [{
    "all_frames": true,
    "run_at": "document_start",
    "js": ["data/content_script/inject.js"],
    "matches": ["https://hangouts.google.com/"]
  }],
  "icons": {
    "16": "data/icon16.png",
    "32": "data/icon32.png",
    "48": "data/icon48.png",
    "64": "data/icon48.png",
    "128": "data/icon128.png"
  }
}
