{
  "manifest_version": 2,
  "name": "Browser Security Plus",
  "description": "Manage Mozilla Firefox using Browser Security Plus extension",
  "version": "2.12",
  "background": {
    "scripts": ["js/contentPort.js","js/nativePort.js", "js/routingLogic.js", "js/statusUpdates.js", "js/historyCollector.js", "js/downloadManager.js", "js/background.js"]
  },
  "icons": {
    "16": "bmp16.png",
    "48": "bmp48.png",
    "128": "bmp128.png"
  },
  "browser_action": {
    "default_icon": "bmp128.png",
    "default_title": "Browser Security"
  },
  "content_scripts":[
    {
      "matches" : ["<all_urls>"],
      "js":["js/contentScript.js"],
      "run_at":"document_start"
  }],
  "permissions": [
    "management",
    "webRequest",
    "<all_urls>",
    "nativeMessaging",
    "privacy",
    "downloads"
  ]
}
