{
  "manifest_version": 2,
  "name": "Simplify Copilot \u2013 Autofill job applications",
  "version": "1.5.5",
  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },
  "description": "The better way to job search. Quick apply and autofill job applications in one click. Track jobs, companies, resumes & more!",
  "homepage_url": "https://simplify.jobs/",
  "short_name": "Simplify Jobs",
  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "storage",
    "webNavigation",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "author": "Simplify Jobs Inc.",
  "applications": {
    "gecko": {
      "id": "sabre@simplify.jobs"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "Simplify Copilot",
    "browser_style": false
  },
  "background": {
    "scripts": [
      "js/background.bundle.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://simplify.jobs/*",
        "*://*.simplify.jobs/*"
      ],
      "js": [
        "js/dunderContentScript.bundle.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/contentScript.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "css/styles.css",
    "assets/logos/icon.png",
    "assets/logos/icon-white.svg"
  ]
}