{
  "version": "2.1.0",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://app.chessvision.ai/*",
    "storage"
  ],
  "manifest_version": 2,
  "name": "Chessvision.ai Chess Position Scanner",
  "short_name": "Chessvision",
  "description": "Analyze chess positions from any website, book, and video in Firefox",
  "author": "Pawel Kacprzak",
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "content.styles.css",
    "icon-128.png",
    "lichess_engine_switch.png",
    "lichess_menu.png",
    "logo_sign.png",
    "bK.svg",
    "wK.svg"
  ],
  "browser_action": {
    "default_title": "Chessvision.ai Scan",
    "default_icon": "icon-128.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{ac1b5818-9b18-470f-91d8-c3a446e9cf87}"
    }
  }
}