{
    "author": "Dominik Pfennig",
    "manifest_version": 2,
    "name": "MetaGer Suche",
    "version": "0.0.1.3",
    "description": "Privatsphäre war noch nie so einfach. Setzt MetaGer als Standard-Suchmaschine und verwaltet Sucheinstellungen für Sie.",
    "applications": {
        "gecko": {
            "id": "firefoxextension@metager.de",
            "strict_min_version": "57.0"
        }
    },
    "icons": {
        "48": "icons/48.png"
    },
    "permissions": [
        "https://metager.de/"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://metager.de/"
            ],
            "js": [
                "removeUnusedContent.js"
            ]
        }
    ],
    "chrome_settings_overrides": {
        "search_provider": {
            "name": "MetaGer",
            "favicon_url": "https://metager.de/favicon.ico",
            "search_url": "https://metager.de/meta/meta.ger3?eingabe={searchTerms}",
            "is_default": true,
            "keyword": "metager"
        }
    }
}