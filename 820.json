{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "homepage_url": "https://github.com/filips123/PWAsForFirefox",
  "version": "2.6.2",
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "firefoxpwa@filips.si"
    }
  },
  "icons": {
    "48": "/images/addon-logo.svg",
    "96": "/images/addon-logo.svg",
    "192": "/images/addon-logo.svg"
  },
  "background": {
    "scripts": [
      "/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "/images/browser-action.svg",
    "default_popup": "/sites/manage.html",
    "default_title": "__MSG_appShortName__"
  },
  "page_action": {},
  "permissions": [
    "http://*/*",
    "https://*/*",
    "nativeMessaging",
    "notifications",
    "storage"
  ],
  "optional_permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}