{

  "manifest_version": 2,
  "name": "Bloody Vikings!",
  "description": "__MSG_extensionDescription__",
  "version": "0.9.4",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "bloodyvikings@ffs.bplaced.net",
      "strict_min_version": "52.0"
    }
  },

  "background": {
    "scripts": [
      "utils.js",
      "services.js",
      "background.js"
    ]
  },

  "permissions": [
    "*://10minutemail.com/*",
    "*://anonbox.net/*",
    "*://www.dispostable.com/*",
    "*://dropmail.me/*",
    "*://www.fakemailgenerator.com/*",
    "*://*.getairmail.com/*",
    "*://mailcatch.com/*",
    "*://www.mailforspam.com/*",
    "*://mailinator.com/*",
    "*://mytemp.email/*",
    "*://temp-mail.org/*",
    "*://tempr.email/*",
    "*://www.trash-mail.com/*",
    "*://www.yopmail.com/*",

    "contextMenus",
    "activeTab",
    "notifications",
    "cookies"
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "24": "icons/icon-24.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/service_popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  }

}
