{
    "manifest_version": 2,
    "name": "ChroPath",
    "description": "ChroPath helps to generate and validate selectors like relative xpath, cssSelector etc with iframe support.",
    
    "version": "5.1.5",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "extension/popup.html"
    },

    "background": {
        "scripts": ["extension/background.js"]
    },

    "content_security_policy": "script-src 'self'; object-src 'self';",

    "permissions": [
        "<all_urls>"
    ],

    "devtools_page": "devtools/devtools-page.html",
    
    "content_scripts": [{
        "matches": ["<all_urls>"],
        
        "css": ["content-script/contentScript.css"],
        "js": ["content-script/contentScript.js"]
    }]

}