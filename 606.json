{
  "manifest_version": 2,
  "name": "B站视频下载",
  "description": "安装之后播放页最左边会多出一个下载按钮，点击就能下载",
  "version": "1.0.18",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "page_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.1.com/*",
        "*://*.2.com/*",
        "*://*.3.com/*",
        "*://*.4.com/*",
        "*://*.5.com/*",
        "*://*.6.com/*",
        "*://*.7.com/*",
        "*://*.baidu.com/*",
        "*://*.weibo.com/*",
        "*://*.qq.com/*",
        "*://*.taobao.com/*",
        "*://*.tmall.com/*",
        "*://*.jd.com/*",
        "*://*.suning.com/*",
        "*://*.vip.com/*",
        "*://*.bilibili.com/*"
      ],
      "js": [
        "./js/content_script.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "./js/background.js"
    ]
  },
  "web_accessible_resources": [
    "js/page.js"
  ],
  "permissions": [
    "storage",
    "*://*.1.com/*",
    "*://*.2.com/*",
    "*://*.3.com/*",
    "*://*.4.com/*",
    "*://*.5.com/*",
    "*://*.6.com/*",
    "*://*.7.com/*",
    "*://*.baidu.com/*",
    "*://*.weibo.com/*",
    "*://*.qq.com/*",
    "*://*.taobao.com/*",
    "*://*.tmall.com/*",
    "*://*.jd.com/*",
    "*://*.suning.com/*",
    "*://*.vip.com/*",
    "*://*.bilibili.com/*"
  ]
}
