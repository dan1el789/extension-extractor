{
  "name": "Readwise",
  "version": "2.8.0",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'",
  "description": "Use the Readwise Chrome Extension to sync your Kindle highlights and then review them daily.",
  "homepage_url": "https://readwise.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/jquery/jquery.min.js",
      "js/purify.min.js",
      "js/rollbar.js",
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Readwise"
  },
  "permissions": [
    "notifications",
    "cookies",
    "storage",
    "alarms",
    "contextMenus",
    "*://read.amazon.com/*",
    "*://*.readwise.io/*"
    ],
  "content_scripts": [
    {
      "matches": [
        "*://read.amazon.com/*",
        "*://*.readwise.io/*"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "*://read.amazon.com/*",
        "*://*.readwise.io/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "js/js-cookie.js",
        "js/rollbar.js",
        "src/inject/inject.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "src/inject/newLoadAllQuotes.js",
    "js/rollbar.js"
  ]
}