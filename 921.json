{
  "version": "0.1.5",
  "manifest_version": 2,
  "name": "Video & Audio Downloader",
  "short_name": "video-audio-downloader",
  "homepage_url": "https://mybrowseraddon.com/video-audio-downloader.html",
  "description": "Easily download video & audio streams via toolbar popup.",
  "permissions": [
    "storage", 
    "*://*/*", 
    "downloads", 
    "webRequest", 
    "notifications"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "lib/config.js", 
      "lib/chrome.js",
      "lib/runtime.js",
      "lib/webrequest.js",
      "lib/common.js",
      "lib/vendor/jszip.js"
    ]
  },
  "browser_action": {
    "default_popup": "data/popup/popup.html",
    "default_title": "Video & Audio Downloader",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}