{
  "name": "Slickdeals: Automatic Coupons and Deals",
  "description": "Always get the best price: find the best deals from Slickdeals and automatically apply coupons!",
  "homepage_url": "https://slickdeals.net/",
  "manifest_version": 2,
  "minimum_chrome_version": "75",
  "permissions": [
    "<all_urls>",
    "contextMenus",
    "cookies",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "vendors/bundle.js",
      "background/bundle.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/monochrome/16.png",
      "19": "icons/monochrome/19.png",
      "32": "icons/monochrome/32.png",
      "38": "icons/monochrome/38.png"
    },
    "default_title": "Slickdeals"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "content_start/bundle.js"
      ]
    },
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "content_wrap/bundle.js"
      ]
    },
    {
      "matches": [
        "https://slickdeals.net/f/*",
        "https://slickdeals.net/e/*"
      ],
      "all_frames": true,
      "run_at": "document_idle",
      "js": [
        "sdDealDetails/bundle.js",
        "vendors/bundle.js"
      ]
    },
    {
      "matches": [
        "https://slickdeals.net/*"
      ],
      "all_frames": true,
      "run_at": "document_start",
      "js": [
        "sd/start.js"
      ]
    },
    {
      "matches": [
        "https://slickdeals.net/*"
      ],
      "run_at": "document_idle",
      "js": [
        "sd/bundle.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "96": "icons/96.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "web_accessible_resources": [
    "*.png",
    "*.svg",
    "*.gif",
    "*.css",
    "*.woff",
    "*.woff2",
    "*.ttf",
    "*.otf",
    "iframe.html"
  ],
  "incognito": "not_allowed",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "version": "3.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "firefox.extension@slickdeals.net",
      "strict_min_version": "57.0"
    }
  }
}