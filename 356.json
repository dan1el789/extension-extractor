{
  "manifest_version": 2,
  "version": "11.1",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "short_name": "Todoist",
  "default_locale": "en",
  "icons": {
    "16": "todoist_16.png",
    "48": "todoist_48.png",
    "128": "todoist_128.png",
    "256": "todoist_256.png",
    "512": "todoist_512.png"
  },
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Todoist",
    "default_icon": "todoist_256.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.todoist.com/*",
        "https://*.todoist.com/*"
      ],
      "js": [
        "browserApi.js",
        "counter_update.js"
      ],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "http://*.todoist.com/*",
    "https://*.todoist.com/*"
  ],
  "commands": {
    "add-to-todoist": {
      "suggested_key": {
        "default": "Alt+Shift+A"
      },
      "description": "__MSG_addToTodoist__"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "support@todoist.com"
    }
  }
}