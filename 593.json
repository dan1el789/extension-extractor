{
  "version": "0.1.5",
  "manifest_version": 2,
  "short_name": "youtubetmadblock",
  "name": "AdBlocker for YouTubeâ„¢ Video",
  "background": {"page": "lib/chrome/background.html"},
  "homepage_url": "http://add0n.com/distraction-free.html",
  "description": "removes all sorts of advertisement and banners from YouTube",
  "permissions": [
    "storage",
    "webRequest",
    "http://*/*", 
    "https://*/*",
    "webRequestBlocking"
  ],
  "content_scripts": [{
    "all_frames": true,
    "run_at": "document_start",
    "css": ["data/inject.css"],
    "matches": ["*://*.youtube.com/*"]
  }],
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png", 
    "128": "data/icons/128.png"
  }
}