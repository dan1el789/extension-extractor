{
  "version": "0.4.0",
  "applications": {
    "gecko": {
      "id": "steam-trade-helper@skintrade"
    }
  },
  "name": "Steam Booster",
  "manifest_version": 2,
  "description": "Extension for Steam extending. Float info, vendor prices (csgofast, opskins, etc), bookmarks and much more!",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon-16.png",
    "19": "icons/icon-19.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "alarms",
    "activeTab",
    "notifications",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://steambooster.net/*",
    "*://steamcommunity.com/*",
    "*://*.steampowered.com/*",
    "*://sih.gainskins.com/",
    "*://steamcharts.com/"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "content_scripts": [
    {
      "js": [
        "scripts/contentScript_loader.js"
      ],
      "css": [
        "styles/contentScript.css"
      ],
      "matches": [
        "*://steamcommunity.com/*",
        "*://*.steampowered.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_title": "Steam Booster",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/*",
    "scripts/*",
    "styles/*"
  ]
}