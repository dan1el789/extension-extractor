{
  "version": "0.1.1",
  "manifest_version": 2,
  "name": "ePUB Reader",
  "short_name": "epub-reader",
  "permissions": ["storage", "contextMenus"],
  "optional_permissions": ["tabs", "<all_urls>"],
  "background": {"page": "lib/chrome/background.html"},
  "homepage_url": "http://mybrowseraddon.com/epub-reader.html",
  "description": "View ePUB files right in your browser in a stand-alone popup window.",
  "browser_action": {
    "default_title": "ePUB Reader",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
