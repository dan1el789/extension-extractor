{
    "manifest_version":2,
    "name":"YouTube Unblocker Plus",
    "version":"2.0.5",
    "default_locale":"de",
    "description":"Gesperrte YouTube-Videos ansehen.",
    "icons":{
        "64":"icon.png"
    },
    "applications":{
        "gecko":{
            "id":"addon@ytunblocker.com"
        }
    },
    "permissions":[
		"<all_urls>",
        "activeTab",
        "notifications",
        "storage",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking"
    ],
    "background":{
        "scripts":[
            "index.js",
            "pc.js"
        ]
    },
    "content_scripts":[
        {
            "matches":[
                "*://*.youtube.com/*"
            ],
            "js":[
                "data/jquery-3.1.0.min.js",
                "data/modification-script.js"
            ]
        }
    ],
    "browser_action":{
        "default_icon":{
            "32":"data/youtube-unblock-inactive.png"
        },
        "default_title":"Unblock YouTube",
        "browser_style":true
    },
    "web_accessible_resources":[
        "data/youtube-player-unavailable-logo.png"
    ]
}
