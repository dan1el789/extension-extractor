{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "1.2.1",
    "author": "123sudo",
    "default_locale": "en",
    "homepage_url": "https://offmp4.com",
    "icons": {
        "16": "img/icon_16.png",
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "build/browser-polyfill.js",
            "build/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "build/browser-polyfill.js",
                "build/content.js"
            ],
            "run_at": "document_end",
            "all_frames": true,
            "match_about_blank": false
        }
    ],
    "permissions": [
        "*://*/*",
        "<all_urls>",
        "tabs",
        "storage",
        "webRequest",
        "downloads"
    ]
}
